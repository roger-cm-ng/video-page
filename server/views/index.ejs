<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <link href="css/reset.css" rel="stylesheet" type="text/css"/>
    <title>Video Page - DUCS</title>
    <script>
        const env = new URLSearchParams(window.location.search).get('env');

        const authUrls = {
            "demo": "//demo.mathletics.com/AuthenticationGateway/api",
            "qa": "//gateway-qa.3plearning.com/AuthenticationGatewayV1/api",
            "live": "//identity-gateway.3plearning.com/AuthenticationGatewayV1/api"
        };

        const contentApiUrls = {
            "demo": "//demo.mathletics.com/catgateway/",
            "qa": "//internalwebsite-qa.3plearning.com/CatGateway_v1/",
            "live": "//internal.3plearning.com/CatGateway_v1/"
        };

        const cdnApiUrls = {
            "demo": "//qa.cdn.mathletics.com/content-api",
            "qa": "//qa.cdn.mathletics.com/content-api",
            "live": "//west.cdn.mathletics.com/content-api"
        };

        // Dummy host configuration, required by 3P-resource
        window.pppAppConfig = {
            "AuthenticationGatewayEndpoint": authUrls[env],
            "BaseName": "/",
            "ConfigurationType": "window",
            "ContentApiEndpoint": contentApiUrls[env],
            "CdnUrl": cdnApiUrls[env],
            "webpages:Version": "3.0.0.0",
            "webpages:Enabled": "false",
            "ClientValidationEnabled": "true",
            "UnobtrusiveJavaScriptEnabled": "true",
            "env": env
        }
    </script>
    <script src="//west.cdn.mathletics.com/html/default-universal-content-screen/ducs_1.0.33.js"></script>
</head>
<body>
<h1>Video Page - DUCS</h1>
<div class="DUCSApplication"></div>
<script>
    // NOTE: This code is only valid for development environments - it has no IE/Edge support!
    const urlParams = new URLSearchParams(window.location.search);
    DUCSApplication.initialise(
        '.DUCSApplication',
        urlParams.get('id'),
        urlParams.get('locale'),
        urlParams.get('layoutVersion'),
        urlParams.get('contentVersion')
    );
</script>
</body>
</html>
