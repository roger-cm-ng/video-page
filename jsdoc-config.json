{
  "hardwrap": false,
  "idInHeadings": false,

  "markdown": {
    "excludeTags": []
  },

  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "destination": "./doco/",
    "recurse": true,
    "tutorials": ""
  },

  "plugins": ["plugins/markdown"],
  "recurseDepth": 10,

  "source": {
    "include": ["components"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },

  "sourceType": "module",

  "tags": {
    "allowUnknownTags": false,
    "dictionaries": ["jsdoc", "closure"]
  },

  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}